<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="130dip"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_gravity="center"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardBackgroundColor="@color/item_bg"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="2dp"
    card_view:cardUseCompatPadding="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:padding="10dp"
        android:layout_gravity="center"
     >

        <ImageView
            android:id="@+id/img_head_attend"
            android:layout_margin="@dimen/smallSpace"
            android:layout_width="@dimen/avatarSize"
            android:layout_height="@dimen/avatarSize"
            android:layout_centerInParent="true"
            android:layout_alignParentLeft="true"
            android:src="@drawable/userhead"
            />

        <TextView
            android:id="@+id/txt_eventname_attend"
            style="@style/tweetName"
            android:layout_marginBottom="1dp"
            android:layout_toRightOf="@+id/img_head_attend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开会"/>

        <TextView
            android:id="@+id/txt_name_attend"
            style="@style/tweetText"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/img_head_attend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_eventname_attend"
            android:textColor="@android:color/darker_gray"
            android:text="李四"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="23:00"
            android:id="@+id/txt_time_attend"
            android:layout_alignTop="@+id/txt_eventname_attend"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="201313077"
            android:id="@+id/txt_msg_attend"
            android:layout_alignBottom="@+id/img_head_attend"
            android:layout_toRightOf="@+id/img_head_attend"
            android:scrollHorizontally="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="张三"
            android:id="@+id/txt_username_attend"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/img_head_attend"
            android:layout_alignStart="@+id/img_head_attend" />




    </RelativeLayout>
</android.support.v7.widget.CardView>